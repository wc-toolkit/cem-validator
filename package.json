{
  "name": "@wc-toolkit/cem-validator",
  "version": "1.0.3",
  "description": "A tool to validate the content of the Custom Elements Manifest to ensure the CEM and components are properly configured.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "/dist"
  ],
  "scripts": {
    "analyze": "npm run build && cem analyze --globs demo/src/**/*.js --outdir demo",
    "changeset": "changeset add",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "clean": "git clean -fdX",
    "demo": "npm run build && node ./demo/validated.js",
    "deploy": "npm run build && npm publish",
    "format": "prettier . --write",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "test": "vitest --run --passWithNoTests",
    "prepare": "husky",
    "release": "pnpm run build && changeset publish --access=public"
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wc-toolkit/cem-validator.git"
  },
  "bugs": {
    "url": "https://github.com/wc-toolkit/cem-validator/issues"
  },
  "homepage": "https://wc-toolkit.com/cem-utilities/cem-validator",
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@eslint/js": "^9.19.0",
    "@types/node": "^20.14.12",
    "@wc-toolkit/cem-utilities": "^1.2.0",
    "comment-parser": "^1.4.1",
    "custom-elements-manifest": "2.1.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "prettier": "3.4.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vitest": "^3.0.4"
  },
  "keywords": [
    "custom-elements",
    "custom-elements-manifest",
    "web-components",
    "components",
    "cem",
    "cem-validator",
    "wc-toolkit",
    "@wc-toolkit/cem-validator"
  ],
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.--write": "prettier --write"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public"
  }
}
